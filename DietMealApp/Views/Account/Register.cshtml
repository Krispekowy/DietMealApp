@using DietMealApp.Core.DTO
@model AppUserDTO
@{
    ViewData["Title"] = "Rejestracja";
}

<form method="post" id="registerForm" enctype="multipart/form-data">
    <h3>Rejestracja</h3>
    <div class="row">
        <div class="col">
            <div class="form-group">
                <label for="FirstName">Imię</label>
                <input class="form-control" asp-for="FirstName" id="Input.FirstName" placeholder="Wprowadź imię" type="text" autocomplete="off" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="LastName">Nazwisko</label>
                <input class="form-control" asp-for="LastName" id="Input.LastName" placeholder="Wprowadź nazwisko" type="text" autocomplete="off" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="UserName">Nazwa</label>
                <input class="form-control" asp-for="UserName" id="Input.UserName" placeholder="Wprowadź nazwe użytkownika" type="text" autocomplete="off" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Email">E-mail</label>
                <input class="form-control" asp-for="Email" id="Input.Email" placeholder="Wprowadź adres e-mail" type="text" autocomplete="off" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="PhoneNumber">Nr tel.</label>
                <input class="form-control" asp-for="PhoneNumber" id="Input.PhoneNumber" placeholder="Wprowadź numer telefonu" type="text" autocomplete="off" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label for="Password">Hasło</label>
                <input class="form-control" asp-for="Password" type="password" placeholder="Wprowadź hasło" id="Input.Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <div class="validation-message"></div>
            </div>
            <div class="form-group">
                <label for="ConfirmPassword">Potwierdź hasło</label>
                <input class="form-control" asp-for="ConfirmPassword" type="password" placeholder="Wprowadź hasło" id="Input.ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
    </div>

    @*<div class="captcha-wrapper">
            @Html.GoogleReCaptcha(Configuration.GetValue<string>("GoogleReCaptcha:ClientKey"))
        </div>
        <span class="validation-message" asp-validation-for="@Model.GoogleReCaptchaResponse"></span>*@

    <button type="submit" class="btn btn-primary">Dalej</button>
    <div class="auth-links">
        <a asp-action="Login">Logowanie</a>
        <a href="#" target="_blank">Regulamin konta użytkownika</a>
    </div>
</form>

@section Scripts {
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <partial name="_ValidationScriptsPartial" />
}
