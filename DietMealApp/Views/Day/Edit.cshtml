@model DietMealApp.Core.DTO.Days.DayFormDTO
@using DietMealApp.Core.Enums;
@{

}

<h1>Edycja dnia diety</h1>

<form id="day" method="post" class="mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input id="dayId" type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="UserId" />
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label">
            Nazwa
        </label>
        <div class="col-sm-4">
            <input asp-for="Name" class="form-control" placeholder="Wprowadź nazwę">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="MealsCount" class="col-sm-2 col-form-label">Ilość posiłków</label>
        <div class="col-sm-4">
            <select class="form-control" asp-for="MealsCount" id="mealsCounter">
                <option selected>-- Ilość posiłków --</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>
    </div>
    <div class="form-group col" id="menu">
    </div>
    <div class="form-group row">
        <div class="col-sm-12">
            <button type="button" id="add-row" class="btn btn-link"><i class="fa fa-plus"></i> Dodaj produkt</button>
        </div>
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Dodaj</button>
            <a asp-action="Index" class="btn btn-danger">Anuluj</a>
        </div>
    </div>
</form>

@section Scripts {
<partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
}
<script type="text/javascript">
const functionName = () => {
    $(document).ready(function () {
      const mealCounter = document.querySelector('#mealsCounter');
      var count = mealCounter.value;
      var dayGuid = document.querySelector('#dayId').value;
      $.ajax({
        url: `/Day/ReleoadMenu`,
        type: "GET",
        data: { mealCount: count, dayId: dayGuid},
        dataType: "html",
        success: function (data) {
          var menu = document.querySelector('#menu');
          menu.innerHTML='';
          $('#menu').append(data);
        },
        error: function (xhr, status, error) {
          console.log(error);
        }
      });
    });
}

const mealCounter = document.querySelector('#mealsCounter');

mealCounter.addEventListener('change', (event) => {
  functionName()
});
</script>