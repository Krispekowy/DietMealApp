    {
        <div class="form-group row">
            <div class="col-sm-4">
                <label for="MealItems[@i].AssignedMealTimeType" value="@(i+1)">@(EnumHelper<MealTimeType>.GetDisplayValue((MealTimeType)i+1))</label>
