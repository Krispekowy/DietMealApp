@model DietMealApp.Core.DTO.Days.DayFormDTO
@using DietMealApp.Core.Enums;
@{

}

<h1>Tworzenie dnia diety</h1>

<form method="post" class="mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="UserId" />
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label">
            Nazwa
        </label>
        <div class="col-sm-4">
            <input asp-for="Name" class="form-control" placeholder="Wprowadź nazwę">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="form-group col">
            <label class="col-sm-12 col-form-label">
                Rodzaj posiłku
            </label>
            <div class="col-sm-12">
                <select id="selectMealType" class="form-control" asp-for="MealMenu[0].AssignedMealTimeType"
                        asp-items="Html.GetEnumSelectList<MealTimeType>()">
                </select>
                <span asp-validation-for="MealMenu[0].AssignedMealTimeType" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group col">
            <label class="col-sm-12 col-form-label">
                Posiłek
            </label>
            <div class="col-sm-12">
                <select id="selectMeal" class="form-control" asp-for="MealMenu[0].SelectedMeal"
                        asp-items="@Model.Meals">
                </select>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Dodaj</button>
            <a asp-action="Index" class="btn btn-danger">Anuluj</a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
}
<script type="text/javascript">
    $('#selectMealType').change(function () {
        var m = document.getElementById("selectMealType");
        var selectedMeal = m.value;
        $.ajax({
            url: `/Meal/GetMealsByType?type=`+ selectedMeal,
            type: "GET", //send it through get method
            dataType: "json",
            success: function (data) {
                let mealDropdown = $('#selectMeal');
                mealDropdown.find('option').remove().end();
                if (data.length == 0) {
                    mealDropdown.append('<option value=0>Brak posiłków tego typu</option>');
                }
                else {
                    mealDropdown.append('<option value=0>-- Wybierz --</option>');
                    $.each(data, function (dataIndex, item) {
                        mealDropdown.append($('<option></option>').attr('value', item.value).text(item.text));
                    });
                }
            },
            error: function (xhr) {
                //Do Something to handle error
            }
        });
    });
</script>