@model List<DietMealApp.Core.DTO.ShoppingDaysDTO>
@using DietMealApp.Core.Enums;
@{

}
<h1>Generuj Listę zakupów</h1>
<form id="shoppingList" method="post" class="mt-3">
    <table id="daysTable">
        <tr>
            <th style="width:30%" class="col">Dzień</th>
            <th style="width:20%" class="col">Liczba dni</th>
        </tr>
        @for (int i = 0; i < @Model.Count; i++)
        {
            <tr class="d-table-row">
                <td style="width:70%">
                    @Html.HiddenFor(a=>a[i].Day.Id)
                    @Html.TextBoxFor(a=>a[i].Day.Name)
                </td>
                <td style="width:30%">
                    @Html.TextBoxFor(a=>a[i].Quantity)
                </td>
            </tr>
        }
    </table>

    <div id="shoppingProductsList">

    </div>
</form>

<button id="btnsubmit" class="btn-primary">Generuj listę</button>
<script type="text/javascript">
    $(document).ready(function () {
        $("#btnsubmit").click(function () {
            var data = $('#shoppingList').serialize(); 
            $.ajax({
                type: 'post',
                //dataType: 'json', 
                contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                cache: false,
                url: "/Shopping/Generate",
                data: data,
                success: function (htmlResponse, textStatus, jqXHR) {
                    console.log(data);
                    $("#shoppingProductsList").html(htmlResponse);
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    console.log(data);
                    console.log("dupa czyli: " + jqXHR );
                    console.log("dupa czyli: " + textStatus );
                    console.log("dupa czyli: " + errorThrown );
                }
            });
        });
    });
</script>