@model DietMealApp.Core.DTO.Products.ProductDTO
@using DietMealApp.Core.Enums;
@{

}
<h1>Dodaj Produkt</h1>

<form enctype="multipart/form-data" method="post" class="mt-3">

    <div class="form-group row">
        <label asp-for="ProductName" class="col-sm-2 col-form-label">
            Nazwa
        </label>
        <div class="col-sm-4">
            <input asp-for="ProductName" class="form-control" placeholder="Nazwa produktu">
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
        <label asp-for="Photo" class="col-sm-2 col-form-label">
            Zdjęcie produktu
        </label>
        <div class="col-sm-4 custom-file" lang="pl">
            <input asp-for="Photo" type="file" class="form-control-file">
            <span asp-validation-for="Photo" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Category" class="col-sm-2 col-form-label">
            Kategoria
        </label>
        <div class="col-sm-4">
            <select class="form-control" asp-for="Category"
                    asp-items="Html.GetEnumSelectList<ProductCategories>()">
            </select>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Kcal" class="col-sm-2 col-form-label">
            Kalorie
        </label>
        <div class="col-sm-4">
            <input type="text" asp-for="Kcal" class="form-control" placeholder="Ilość kalorii">
            <span asp-validation-for="Kcal" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Unit" class="col-sm-2 col-form-label">
            Jednostka
        </label>
        <div class="col-sm-4">
            <select class="form-control" asp-for="Unit"
                    asp-items="Html.GetEnumSelectList<Unit>()">
            </select>
            <span asp-validation-for="Unit" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="QuantityUnit" class="col-sm-2 col-form-label">
            Ilość jednostek
        </label>
        <div class="col-sm-4">
            <input type="text" asp-for="QuantityUnit" class="form-control" placeholder="Ilość jednostek">
            <span asp-validation-for="QuantityUnit" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-4">
            <button type="submit" class="btn btn-primary">Dodaj</button>
            <a asp-action="Index" class="btn btn-danger">Wróć</a>
        </div>
    </div>
    @section Scripts{
        <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
    }
</form>