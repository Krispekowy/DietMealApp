@model DietMealApp.Core.DTO.Products.ProductDTO
@using DietMealApp.Core.Enums
@{

}
<h1>Edytuj produkt</h1>

<form enctype="multipart/form-data" method="post" class="mt-3">
    <input hidden asp-for="Id" />
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="form-group row">
                    <label asp-for="ProductName" class="col-sm-4 col-form-label">
                        Nazwa
                    </label>
                    <div class="col-sm-8">
                        <input asp-for="ProductName" class="form-control" placeholder="Nazwa produktu">
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Category" class="col-sm-4 col-form-label">
                        Kategoria
                    </label>
                    <div class="col-sm-8">
                        <select class="form-control" asp-for="Category"
                                asp-items="Html.GetEnumSelectList<ProductCategories>()">
                        </select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Kcal" class="col-sm-4 col-form-label">
                        Kalorie
                    </label>
                    <div class="col-sm-8">
                        <input type="text" asp-for="Kcal" class="form-control" placeholder="Ilość kalorii">
                        <span asp-validation-for="Kcal" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Protein" class="col-sm-4 col-form-label">
                        Białka
                    </label>
                    <div class="col-sm-4">
                        <input type="text" asp-for="Protein" class="form-control" placeholder="Ilość białka">
                        <span asp-validation-for="Protein" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Carbohydrates" class="col-sm-4 col-form-label">
                        Węglowodany
                    </label>
                    <div class="col-sm-4">
                        <input type="text" asp-for="Carbohydrates" class="form-control" placeholder="Ilość węglowodanów">
                        <span asp-validation-for="Carbohydrates" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Fats" class="col-sm-4 col-form-label">
                        Tłuszcze
                    </label>
                    <div class="col-sm-4">
                        <input type="text" asp-for="Fats" class="form-control" placeholder="Ilość tłuszczy">
                        <span asp-validation-for="Fats" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Unit" class="col-sm-4 col-form-label">
                        Jednostka
                    </label>
                    <div class="col-sm-4">
                        <select class="form-control" asp-for="Unit"
                                asp-items="Html.GetEnumSelectList<Unit>()">
                        </select>
                        <span asp-validation-for="Unit" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="QuantityUnit" class="col-sm-4 col-form-label">
                        Ilość jednostek
                    </label>
                    <div class="col-sm-8">
                        <input type="text" asp-for="QuantityUnit" class="form-control" placeholder="Ilość jednostek">
                        <span asp-validation-for="QuantityUnit" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <button type="submit" class="btn btn-primary btn-block">Aktualizuj</button>
                    </div>
                    <div class="col-sm-6">
                        <a asp-action="Index" class="btn btn-danger btn-block">Wróć</a>
                    </div>
                </div>
            </div>
            <div class="col-sm">
                <label asp-for="Photo150x150Path" class="col-sm-4 col-form-label">
                    <img class="card-img-top" style="width:256px; height:256px" src="@Model.Photo150x150Path" asp-append-version="true" />
                </label>
                <div class="col-sm-8 custom-file" lang="pl">
                    <input asp-for="Photo" type="file" class="form-control-file">
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    @section Scripts{
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
    <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var fileName = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(fileName);
                    });
                });
                $.validator.methods.range = function (value, element, param) {
            var globalizedValue = value.replace(",", ".");
            return this.optional(element) || (globalizedValue >= param[0] && globalizedValue <= param[1]);
        }

        $.validator.methods.number = function (value, element) {
            return this.optional(element) || /^-?(?:\d+|\d{1,3}(?:[\s\.,]\d{3})+)(?:[\.,]\d+)?$/.test(value);
        }
    </script>
    }
</form>